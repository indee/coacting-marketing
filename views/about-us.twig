{% extends "master/base.twig" %}
{% block content %}
  <nav class="navbar navbar-default navbar-follower">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><a href="/">Home</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a class="hero-link" href="/getting-started">Get Started</a></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>
  <div class="container">
    {% for item in post.get_field('members') %}
      <section class="page-section row content">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <h2>{{item.name}}</h2>
          {{item.profile_picture.src}}
          {{item.bio}}
        </div>
        <div class="col-md-2"></div>
      </section>
    {% endfor %}
  </div>
{% endblock %}
