{% extends "master/base.twig" %}
{% block content %}


  <nav class="navbar navbar-default navbar-follower">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><a href="/">Home</a></li>
          <li><a href="#overview">Overview</a></li>
          <li><a href="#whatIsIt">What is it?</a></li>
          <li><a href="#howDoesItWork">How does it work?</a></li>
          <li><a href="#pricing">Pricing</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a class="hero-link" href="#">Get Started</a></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <div class="container">
    <section class="page-section row">
      <a id="overview"></a>
      {% for item in post.get_field('widgets') %}
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="card">
                <i class="fa fa-{{item.icon}}"></i>
                <p><strong>{{item.title}}</strong></p>
                <p>{{item.text}}</p>
            </div>
          </div>
      {% endfor %}
    </section>

    <section class="page-section row content">
      <div class="col-md-12">
        <a id="whatIsIt">
          <h2>What is it?</h2>
        </a>
      </div>
      <div class="col-sm-12 col-md-6">
        {{post.get_field('what_is_it')}}
      </div>
      <div class="col-sm-12 col-md-6">
        <img src="{{theme.asset.img}}/landing.gif" alt="" style="width:100%;">
      </div>
    </section>

    <section class="page-section row content">
      <div class="col-md-12">
        <a id="howDoesItWork">
          <h2>How does it work?</h2>
        </a>
      </div>
      <div class="col-sm-12 col-md-6">
        <img src="http://placehold.it/850x500" alt="" style="position:relative;left:-50px;width:100%;margin-bottom:45px;">
      </div>
      <div class="col-sm-12 col-md-6">
        {{post.get_field('how_does_it_work')}}
      </div>
    </section>

    <section class="page-section row content">
      <div class="col-md-12">
        <a id="testimonials">
          <h2>Testimonials</h2>
        </a>
      </div>
      <div class="col-sm-12" id="testimonial-carousel">
        {% for review in reviews %}
          <div class="carousel-item">
            {{review.get_field('testimonial_excerpt')}}
            <p class="testimonial-name">
              {{review.get_field('name')}} -
              {{review.get_field('company')}}
            </p>
          </div>
        {% endfor %}
      </div>
      <div class="col-sm-12">
        <a href="/testimonials" class="btn btn-default btn-center">Read More</a>
      </div>
    </section>

    <section class="page-section row content">
      <div class="col-md-12">
        <a id="pricing">
          <h2>Pricing</h2>
        </a>
      </div>

      <div class="col-xs-12 prices">
        <div class="price-item best">
          <div class="price-item-cover"></div>
          <div class="price-item-face">
            <header>
              <h3>£30</h3>
              <p>Best for small teams</p>
            </header>
            <section>
              <p>1-9 Licences</p>
            </section>
          </div>
          <a href="#">Purchase</a>
        </div>
        <div class="price-item">
          <div class="price-item-cover"></div>
          <div class="price-item-face">
            <header>
              <h3>£27</h3>
              <p>Best for large teams </p>
            </header>
            <section>
              <p>10-49 Licences</p>
            </section>
          </div>
          <a href="#">Purchase</a>
        </div>
        <div class="price-item">
          <div class="price-item-cover"></div>
          <div class="price-item-face">
            <header>
              <h3>£25</h3>
              <p>Description</p>
            </header>
            <section>
              <p>50 - 99 Licences</p>
            </section>
          </div>
          <a href="#">Purchase</a>
        </div>
        <div class="price-item">
          <div class="price-item-cover"></div>
          <div class="price-item-face">
            <header>
              <h3>£23</h3>
              <p>Description</p>
            </header>
            <section>
              <p>100 - 249 Licences</p>
            </section>
          </div>
          <a href="#">Purchase</a>
        </div>
        <div class="price-item">
          <div class="price-item-cover"></div>
          <div class="price-item-face">
            <header>
              <h3>£20</h3>
              <p>Description</p>
            </header>
            <section>
              <p>250 ++ Licences</p>
            </section>
          </div>
          <a href="#">Purchase</a>
        </div>
      </div>

      <div class="col-md-12">
        <img src="{{theme.asset.img}}/questions.png" alt="" style="width:100%;position:relative;bottom:-50px;">
      </div>
    </section>

  </div>

  {% endblock %}
