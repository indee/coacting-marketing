{% extends "master/base.twig" %}
{% block content %}


  <nav class="navbar navbar-default navbar-follower">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><a href="/">Home</a></li>
          <li><a href="#overview">Overview</a></li>
          <li><a href="#whatIsIt">What is it?</a></li>
          <li><a href="#howDoesItWork">How does it work?</a></li>
          <li><a href="#pricing">Pricing</a></li>
          <li><a href="/about-us">About Us</a></a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a class="hero-link" href="https://coacting.co.uk/pre-purchase-tcs/">Buy Now</a></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>

  <div class="container content">
    <section class="page-section row">
      <a id="overview"></a>
      <!-- TODO Polish these widgets -->
      {% for item in post.get_field('widgets') %}
          <div class="col-xs-12 col-md-6">
            <div class="card card-theme{{loop.index}}">
                <i class="fa fa-{{item.icon}}"></i>
                <p><strong>{{item.title}}</strong></p>
                <p>{{item.text}}</p>
            </div>
          </div>
      {% endfor %}
    </section>

    <section class="page-section row">
      <div class="col-md-12">
        <a id="whatIsIt">
          <h2>What is it?</h2>
        </a>
      </div>
      <div class="col-sm-12 col-md-6">
        {{post.get_field('what_is_it')}}
      </div>
      <div class="col-sm-12 col-md-6">
        <img src="{{theme.asset.img}}/landing.gif" alt="" style="width:100%;">
      </div>
    </section>

    <section class="page-section row">
      <div class="col-md-12">
        <a id="howDoesItWork">
          <h2>How does it work?</h2>
        </a>
      </div>
      <div class="col-sm-12 col-md-6">
        <iframe
          src="https://player.vimeo.com/video/150721558"
          width="500"
          height="281"
          frameborder="0"
          style="position:relative;width:100%;margin-bottom:45px;"
          webkitallowfullscreen
          mozallowfullscreen
          allowfullscreen
        >
        </iframe>
      </div>
      <div class="col-sm-12 col-md-6">
        {{post.get_field('how_does_it_work')}}
      </div>
    </section>

    <section class="page-section row">
      <div class="col-md-12">
        <a id="testimonials">
          <h2>Testimonials</h2>
        </a>
      </div>
      <div class="col-sm-12" id="testimonial-carousel">
        {% for review in reviews %}
          <div class="carousel-item">
            {{review.get_field('testimonial_excerpt')}}
            <p class="testimonial-name">
              {{review.get_field('name')}} -
              {{review.get_field('company')}}
            </p>
          </div>
        {% endfor %}
      </div>
      <div class="col-sm-12">
        <a href="/testimonials" class="btn btn-default btn-center">Read More</a>
      </div>
    </section>

    <section class="page-section row">
      <div class="col-md-12">
        <a id="pricing">
          <h2>Pricing</h2>
          <span class="subtitle">Excluding VAT</span>
        </a>
      </div>

      <div class="col-xs-12 prices">
        <div class="price-item theme1">
          <div class="price-item-cover"></div>
          <div class="price-item-face">
            <header>
              <h3>£30</h3>
              <span>
                Per Licence
                <br>
                Plus VAT
              </span>
              <p>Best for individuals</p>
            </header>
            <section>
              <p>Single</p>
              <span>Licence</span>
            </section>
          </div>
          <a href="https://coacting.co.uk/pre-purchase-tcs/">Purchase</a>
        </div>
        <div class="price-item">
          <div class="price-item-cover"></div>
          <div class="price-item-face">
            <header>
              <h3>£27</h3>
              <span>
                Per Licence
                <br>
                Plus VAT
              </span>
              <p>Best for teams</p>
            </header>
            <section>
              <p>10 - 49</p>
              <span>Licences</span>
            </section>
          </div>
          <a href="/contact-us/">Purchase</a>
        </div>
        <div class="price-item theme2">
          <div class="price-item-cover"></div>
          <div class="price-item-face">
            <header>
              <h3>£25</h3>
              <span>
                Per Licence
                <br>
                Plus VAT
              </span>
              <p>Best for organisations</p>
            </header>
            <section>
              <p>50 - 99</p>
              <span>Licences</span>
            </section>
          </div>
          <a href="/contact-us/">Purchase</a>
        </div>
      </div>
    </section>

  </div>

  {% endblock %}
