{% extends "master/base.twig" %}
{% block content %}
  <nav class="navbar navbar-default navbar-follower">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><a href="/">Home</a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><a class="hero-link" href="https://coacting.co.uk/pre-purchase-tcs/">Buy Now</a></li>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </nav>
  <div class="container">
    <section class="row page-section content">
      <div class="col-md-12">
        <h2>Testimonials</h2>
      </div>
    </section>
    {% for review in reviews %}
      <section class="row page-section content">
        <div class="col-md-12">
          {{review.get_field('testimonial')}}
          <strong>
            {{review.get_field('name')}} -
            {{review.get_field('company')}}
          </strong>
          <br>
          <br>
        </div>
      </section>
    {% endfor %}
  </div>
{% endblock %}
